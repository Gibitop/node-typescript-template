{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig.json to read more about this file */
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"],
            "@types/*": ["./types/*"],
        },
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
